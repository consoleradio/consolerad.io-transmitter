{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "rootDir": "./src",
        "baseUrl": "./src",
        "outDir": "./lib",
        "declaration": true,
        "target": "ES5",
        "module": "es2015",
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "importHelpers": true,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "downlevelIteration": true,
        "noImplicitAny": false,
        "lib": [
            "es6",
            "es7",
            "dom"
        ]
    },
    "exclude": [
        "./node_modules",
        "./webpack",
        "./webpack.config.js"
    ],
    "compileOnSave": false
}